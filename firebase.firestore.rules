rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PROTECT USERS COLLECTION
    // Even though the request was "Read: Allowed for everyone", 
    // strictly applying that to 'users' exposes PII. 
    // Hardening implies securing data.
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null; // As requested: "Write: Allowed ONLY for authenticated users"
    }

    // GLOBAL RULE FOR EVERYTHING ELSE (Images, Posts, Settings, etc.)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
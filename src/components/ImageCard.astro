---
interface Props {
  src: string;
  alt: string;
  title: string;
}

const { src, alt, title } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <img
    src={src}
    alt={alt}
    class="w-full h-64 object-cover"
  />
  <div class="p-4">
    <h3 class="text-lg font-medium text-gray-900">{title}</h3>
  </div>
</div>
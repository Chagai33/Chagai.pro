---
import { auth } from '../lib/firebase';
import { InstagramIcon } from './icons/InstagramIcon';
import { ThemeToggle } from './ThemeToggle';

const navItems = [
  { href: '/', label: 'Gallery', authOnly: true },
  { href: '/admin', label: 'Admin', adminOnly: true }
];
---

<nav class="bg-white dark:bg-dark-primary shadow-sm transition-colors fixed top-0 left-0 right-0 z-50" dir="ltr">
  <div class="container mx-auto px-4">
    <div class="flex justify-between items-center h-14">
      <div class="flex items-center space-x-3">
        <a 
          href="/"
          class="text-gray-600 dark:text-dark-primary hover:text-gray-900 dark:hover:text-beige transition-colors"
          title="Home"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12l8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
          </svg>
        </a>
        <a 
          href="https://www.instagram.com/haggai_yechiel" 
          target="_blank" 
          rel="noopener noreferrer"
          class="text-gray-600 dark:text-dark-primary hover:text-gray-900 dark:hover:text-beige transition-colors"
        >
          <InstagramIcon className="w-5 h-5" />
        </a>
        <button
          onclick="document.getElementById('about').scrollIntoView({ behavior: 'smooth' })"
          class="text-gray-600 dark:text-dark-primary hover:text-gray-900 dark:hover:text-beige px-2 py-1 rounded-md text-sm font-medium font-display transition-colors"
        >
          About
        </button>
      </div>

      <div class="text-center flex items-center space-x-2">
        <h1 class="text-lg font-bold text-primary dark:text-dark-primary font-display transition-colors">Haggai Yechiel</h1>
        <span class="text-gray-400 dark:text-dark-secondary">-</span>
        <p class="text-sm text-gray-600 dark:text-dark-secondary font-display transition-colors">Photography Portfolio</p>
      </div>

      <div class="flex items-center space-x-3">
        <div id="userInfo" class="hidden text-sm text-gray-600 dark:text-dark-primary"></div>
        <div class="flex items-center space-x-3">
          {navItems.map(item => (
            <a
              href={item.href}
              class={`text-gray-600 dark:text-dark-primary hover:text-gray-900 dark:hover:text-beige px-2 py-1 rounded-md text-sm font-medium font-display transition-colors ${item.adminOnly ? 'admin-only hidden' : ''} ${item.authOnly ? 'auth-only hidden' : ''}`}
              data-nav-item={item.label}
            >
              {item.label}
            </a>
          ))}
          <ThemeToggle client:load />
          <a
            href="/login"
            class="text-gray-600 dark:text-dark-primary hover:text-gray-900 dark:hover:text-beige p-1.5 rounded-full transition-colors"
            data-nav-item="Login"
            title="Admin Login"
          >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.594 3.94c.09-.542.56-.94 1.11-.94h2.593c.55 0 1.02.398 1.11.94l.213 1.281c.063.374.313.686.645.87.074.04.147.083.22.127.324.196.72.257 1.075.124l1.217-.456a1.125 1.125 0 011.37.49l1.296 2.247a1.125 1.125 0 01-.26 1.431l-1.003.827c-.293.24-.438.613-.431.992a6.759 6.759 0 010 .255c-.007.378.138.75.43.99l1.005.828c.424.35.534.954.26 1.43l-1.298 2.247a1.125 1.125 0 01-1.369.491l-1.217-.456c-.355-.133-.75-.072-1.076.124a6.57 6.57 0 01-.22.128c-.331.183-.581.495-.644.869l-.213 1.28c-.09.543-.56.941-1.11.941h-2.594c-.55 0-1.02-.398-1.11-.94l-.213-1.281c-.062-.374-.312-.686-.644-.87a6.52 6.52 0 01-.22-.127c-.325-.196-.72-.257-1.076-.124l-1.217.456a1.125 1.125 0 01-1.369-.49l-1.297-2.247a1.125 1.125 0 01.26-1.431l1.004-.827c.292-.24.437-.613.43-.992a6.932 6.932 0 010-.255c.007-.378-.138-.75-.43-.99l-1.004-.828a1.125 1.125 0 01-.26-1.43l1.297-2.247a1.125 1.125 0 011.37-.491l1.216.456c.356.133.751.072 1.076-.124.072-.044.146-.087.22-.128.332-.183.582-.495.644-.869l.214-1.281z" />
              <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</nav>

<!-- Spacer to prevent content from being hidden under fixed navbar -->
<div class="h-14"></div>

<script>
  import { auth } from '../lib/firebase';
  import { onAuthStateChanged, signOut } from 'firebase/auth';
  import { checkAdminStatus } from '../lib/firebase';

  const userInfo = document.getElementById('userInfo');
  const loginLink = document.querySelector('[data-nav-item="Login"]');
  const adminLinks = document.querySelectorAll('.admin-only');
  const authLinks = document.querySelectorAll('.auth-only');

  onAuthStateChanged(auth, async (user) => {
    if (user) {
      // User is signed in
      userInfo?.classList.remove('hidden');
      userInfo!.innerHTML = `
        <div class="flex items-center space-x-2 font-display">
          <span>${user.email}</span>
          <button id="logoutBtn" class="text-red-600 dark:text-red-400 hover:text-red-800 dark:hover:text-red-300">Logout</button>
        </div>
      `;
      loginLink?.classList.add('hidden');

      // Show auth-only links for authenticated users
      authLinks.forEach(link => link.classList.remove('hidden'));

      // Check if user is admin and show admin links
      const isAdmin = await checkAdminStatus(user);
      if (isAdmin) {
        adminLinks.forEach(link => link.classList.remove('hidden'));
      }

      // Add logout functionality
      document.getElementById('logoutBtn')?.addEventListener('click', async () => {
        try {
          await signOut(auth);
          window.location.href = '/';
        } catch (error) {
          console.error('Error signing out:', error);
        }
      });
    } else {
      // User is signed out
      userInfo?.classList.add('hidden');
      loginLink?.classList.remove('hidden');
      adminLinks.forEach(link => link.classList.add('hidden'));
      authLinks.forEach(link => link.classList.add('hidden'));
    }
  });
</script>